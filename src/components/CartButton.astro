<button id="cart-btn" class="relative hover:opacity-70 transition-opacity">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
    </svg>
    <span
        id="cart-count"
        class="absolute -top-2 -right-2 bg-blue-600 text-white text-xs font-semibold rounded-full h-5 w-5 flex items-center justify-center hidden"
    >
        0
    </span>
</button>

<!-- Cart Sidebar -->
<div id="cart-sidebar" class="cart-sidebar">
    <!-- Header -->
    <div class="cart-header">
        <div>
            <h2 class="text-xl font-semibold text-gray-900">
                Carrito de Compras
            </h2>
            <p id="cart-item-count" class="text-sm text-gray-500 mt-0.5">
                0 productos
            </p>
        </div>
        <button
            id="close-cart"
            class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-gray-100 rounded-full"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Cart Items Container -->
    <div id="cart-items-container" class="cart-items-container">
        <!-- Empty State -->
        <div
            id="empty-state"
            class="h-full flex flex-col items-center justify-center px-6 py-8"
        >
            <div
                class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mb-4"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-10 w-10 text-gray-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                Tu carrito está vacío
            </h3>
            <p class="text-gray-500 text-sm text-center mb-4 max-w-xs">
                Agrega productos para comenzar tu compra
            </p>
            <button
                id="continue-shopping"
                class="text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors"
            >
                Continuar comprando →
            </button>
        </div>

        <!-- Items List -->
        <div id="cart-items" class="hidden px-4 py-4">
            <!-- Products will be inserted here -->
        </div>
    </div>

    <!-- Footer Summary -->
    <div class="cart-footer">
        <!-- Promo Code -->
        <div class="mb-3 pb-3 border-b border-gray-100">
            <button
                id="toggle-promo"
                class="flex items-center justify-between w-full text-sm text-gray-700 hover:text-gray-900 transition-colors"
            >
                <span class="font-medium">¿Tienes un código promocional?</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 transition-transform duration-200"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>
            <div id="promo-input" class="hidden mt-2 flex gap-2">
                <input
                    type="text"
                    placeholder="Código"
                    class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
                <button
                    class="px-4 py-2 bg-gray-900 text-white rounded-lg text-sm font-medium hover:bg-gray-800 transition-colors"
                >
                    Aplicar
                </button>
            </div>
        </div>

        <!-- Price Summary -->
        <div class="space-y-2 mb-3">
            <div class="flex justify-between text-sm text-gray-600">
                <span>Subtotal</span>
                <span id="cart-subtotal" class="font-medium text-gray-900"
                    >$0</span
                >
            </div>
            <div class="flex justify-between text-sm text-gray-600">
                <span>Envío</span>
                <span id="cart-shipping" class="font-medium text-green-600"
                    >Gratis</span
                >
            </div>
            <div
                class="pt-2 border-t border-gray-200 flex justify-between items-center"
            >
                <span class="text-base font-semibold text-gray-900">Total</span>
                <span id="cart-total" class="text-xl font-bold text-gray-900"
                    >$0</span
                >
            </div>
        </div>

        <!-- Checkout Button -->
        <button
            id="checkout-btn"
            class="w-full bg-blue-600 text-white py-3 rounded-xl font-semibold hover:bg-blue-700 transition-all btn-press shadow-lg disabled:bg-gray-300 disabled:cursor-not-allowed disabled:shadow-none"
            disabled
        >
            Finalizar Compra
        </button>

        <!-- Security Info -->
        <div
            class="flex items-center justify-center gap-2 mt-3 text-xs text-gray-500"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
            </svg>
            <span>Compra 100% segura</span>
        </div>
    </div>
</div>

<!-- Backdrop -->
<div
    id="cart-backdrop"
    class="fixed inset-0 bg-black/50 hidden z-40 backdrop-blur-sm transition-opacity"
>
</div>

<script>
    import {
        getCart,
        removeFromCart,
        updateQuantity,
    } from "../scripts/cart.js";

    const cartBtn = document.getElementById("cart-btn");
    const cartSidebar = document.getElementById("cart-sidebar");
    const cartBackdrop = document.getElementById("cart-backdrop");
    const closeCart = document.getElementById("close-cart");
    const continueShopping = document.getElementById("continue-shopping");
    const cartCount = document.getElementById("cart-count");
    const cartItemCount = document.getElementById("cart-item-count");
    const emptyState = document.getElementById("empty-state");
    const cartItems = document.getElementById("cart-items");
    const cartSubtotal = document.getElementById("cart-subtotal");
    const cartTotal = document.getElementById("cart-total");
    const checkoutBtn = document.getElementById(
        "checkout-btn",
    ) as HTMLButtonElement;
    const togglePromo = document.getElementById("toggle-promo");
    const promoInput = document.getElementById("promo-input");

    // Fix mobile viewport height
    function setMobileHeight() {
        const vh = window.innerHeight * 0.01;
        document.documentElement.style.setProperty("--vh", `${vh}px`);
    }

    setMobileHeight();
    window.addEventListener("resize", setMobileHeight);

    function openCart() {
        cartSidebar?.classList.add("cart-open");
        cartBackdrop?.classList.remove("hidden");
        document.body.style.overflow = "hidden";
        updateCartUI();
    }

    function closeCartSidebar() {
        cartSidebar?.classList.remove("cart-open");
        cartBackdrop?.classList.add("hidden");
        document.body.style.overflow = "";
    }

    function formatPrice(price: number): string {
        return new Intl.NumberFormat("es-CL", {
            style: "currency",
            currency: "CLP",
            minimumFractionDigits: 0,
        }).format(price);
    }

    function updateCartUI() {
        const cart = getCart();
        const count = cart.reduce((sum, item) => sum + item.quantity, 0);

        if (cartCount) {
            if (count > 0) {
                cartCount.textContent = count > 99 ? "99+" : count.toString();
                cartCount.classList.remove("hidden");
            } else {
                cartCount.classList.add("hidden");
            }
        }

        if (cartItemCount) {
            cartItemCount.textContent =
                count === 1 ? "1 producto" : `${count} productos`;
        }

        if (cart.length === 0) {
            emptyState?.classList.remove("hidden");
            cartItems?.classList.add("hidden");
            if (checkoutBtn) checkoutBtn.disabled = true;
        } else {
            emptyState?.classList.add("hidden");
            cartItems?.classList.remove("hidden");
            if (checkoutBtn) checkoutBtn.disabled = false;

            if (cartItems) {
                cartItems.innerHTML = `
          <div class="space-y-3">
            ${cart
                .map(
                    (item) => `
              <div class="flex gap-3 pb-3 border-b border-gray-100 last:border-0">
                <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                  <img src="${item.image}" alt="${item.name}" class="w-full h-full object-cover" />
                </div>
                
                <div class="flex-1 min-w-0 flex flex-col">
                  <div class="flex justify-between gap-2 mb-1">
                    <h3 class="font-medium text-sm text-gray-900 line-clamp-2 flex-1">${item.name}</h3>
                    <button class="remove-item text-gray-400 hover:text-red-600 transition-colors flex-shrink-0" data-id="${item.id}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                  </div>
                  
                  <p class="text-base font-semibold text-gray-900 mb-2">${formatPrice(item.price)}</p>
                  
                  <div class="flex items-center justify-between mt-auto">
                    <div class="flex items-center border border-gray-300 rounded-lg overflow-hidden bg-white">
                      <button class="decrease-qty px-2.5 py-1 hover:bg-gray-50 transition-colors text-gray-700 text-lg" data-id="${item.id}">−</button>
                      <span class="px-3 py-1 text-sm font-medium border-x border-gray-300 min-w-[2.5rem] text-center">${item.quantity}</span>
                      <button class="increase-qty px-2.5 py-1 hover:bg-gray-50 transition-colors text-gray-700 text-lg" data-id="${item.id}">+</button>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">
                      ${formatPrice(item.price * item.quantity)}
                    </span>
                  </div>
                </div>
              </div>
            `,
                )
                .join("")}
          </div>
        `;

                document.querySelectorAll(".increase-qty").forEach((btn) => {
                    btn.addEventListener("click", (e) => {
                        const id = parseInt(
                            (e.currentTarget as HTMLElement).dataset.id!,
                        );
                        const item = cart.find((i) => i.id === id);
                        if (item) {
                            updateQuantity(id, item.quantity + 1);
                            updateCartUI();
                        }
                    });
                });

                document.querySelectorAll(".decrease-qty").forEach((btn) => {
                    btn.addEventListener("click", (e) => {
                        const id = parseInt(
                            (e.currentTarget as HTMLElement).dataset.id!,
                        );
                        const item = cart.find((i) => i.id === id);
                        if (item && item.quantity > 1) {
                            updateQuantity(id, item.quantity - 1);
                            updateCartUI();
                        }
                    });
                });

                document.querySelectorAll(".remove-item").forEach((btn) => {
                    btn.addEventListener("click", (e) => {
                        const id = parseInt(
                            (e.currentTarget as HTMLElement).dataset.id!,
                        );
                        removeFromCart(id);
                        updateCartUI();
                    });
                });
            }
        }

        const subtotal = cart.reduce(
            (sum, item) => sum + item.price * item.quantity,
            0,
        );
        const total = subtotal;

        if (cartSubtotal) cartSubtotal.textContent = formatPrice(subtotal);
        if (cartTotal) cartTotal.textContent = formatPrice(total);
    }

    cartBtn?.addEventListener("click", openCart);
    closeCart?.addEventListener("click", closeCartSidebar);
    cartBackdrop?.addEventListener("click", closeCartSidebar);
    continueShopping?.addEventListener("click", closeCartSidebar);

    togglePromo?.addEventListener("click", () => {
        promoInput?.classList.toggle("hidden");
        const icon = togglePromo.querySelector("svg");
        icon?.classList.toggle("rotate-180");
    });

    document.addEventListener("keydown", (e) => {
        if (
            e.key === "Escape" &&
            cartSidebar?.classList.contains("cart-open")
        ) {
            closeCartSidebar();
        }
    });

    window.addEventListener("cartUpdated", updateCartUI);
    updateCartUI();

    // Checkout navigation
    checkoutBtn?.addEventListener("click", () => {
        closeCartSidebar();
        window.location.href = "/checkout";
    });
</script>

<style>
    /* Fix para altura móvil (iOS Safari) */
    .cart-sidebar {
        position: fixed;
        top: 0;
        right: 0;
        width: 100vw;
        height: 100vh;
        height: calc(var(--vh, 1vh) * 100); /* Fallback para iOS */
        background: white;
        box-shadow: -2px 0 20px rgba(0, 0, 0, 0.15);
        transform: translateX(100%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 50;
        display: flex;
        flex-direction: column;
    }

    @media (min-width: 768px) {
        .cart-sidebar {
            width: 440px;
            height: 100vh;
        }
    }

    @media (min-width: 1024px) {
        .cart-sidebar {
            width: 480px;
        }
    }

    .cart-sidebar.cart-open {
        transform: translateX(0);
    }

    .cart-header {
        flex-shrink: 0;
        background: white;
        border-bottom: 1px solid #e5e7eb;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .cart-items-container {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        -webkit-overflow-scrolling: touch; /* Smooth scrolling en iOS */
    }

    .cart-footer {
        flex-shrink: 0;
        background: white;
        border-top: 1px solid #e5e7eb;
        padding: 1rem;
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .btn-press:active {
        transform: scale(0.98);
    }

    /* Prevenir scroll horizontal en móvil */
    .cart-sidebar * {
        max-width: 100%;
    }
</style>
